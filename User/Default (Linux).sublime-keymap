[
    // Convert to expanded format
    {
        "keys": ["ctrl+alt+["],
        "command": "css_format",
        "args": {
            "action": "expand"
        }
    },

    // Convert to compact format
    {
        "keys": ["ctrl+alt+]"],
        "command": "css_format",
        "args": {
            "action": "compact"
        }
    },

    // Compress
    {
        "keys": ["ctrl+alt+\\"],
        "command": "css_format",
        "args": {
            "action": "compress"
        }
    }
]
